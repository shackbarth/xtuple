       CASE WHEN (planord_firm) THEN <? value("firmTo") ?> 
	    ELSE <? value("plannedTo") ?> 
       END AS ordertype,
       CAST(planord_number AS text) AS ordernumber,
       1 AS sequence,
       srcwhsinfo.warehous_code || '/' || whsinfo.warehous_code AS item_number,
