  AND  (wo_itemsite_id=itemsite_id)
  AND  (itemsite_item_id=item_id)
  AND  (brddist_itemsite_id=itemsite_id)
  AND  (itemsite_warehous_id=<? value("warehous_id") ?>)
  AND  (itemsite_item_id=<? value("item_id") ?>)
